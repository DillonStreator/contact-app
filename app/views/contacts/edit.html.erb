<h1>Edit contact</h1>
<%= form_tag "/contacts/update/#{@contact.id}", method: :patch do %>
  <div>
    First name: <input class="form-control" type="text" name="first_name" value=<%= @contact.first_name %>>
  </div>
  <div>
    Middle name: <input class="form-control" type="text" name="middle_name" value=<%= @contact.middle_name %>>
  </div>
  <div>
    Last name: <input class="form-control" type="text" name="last_name" value=<%= @contact.last_name %>>
  </div>
  <div>
    Email: <input class="form-control" type="text" name="email" value=<%= @contact.email %>>
  </div>
  <div>
    Phone number: <input class="form-control" type="text" name="phone_number" value=<%= @contact.phone_number %>>
  </div>
  <div>
    Bio: <textarea class="form-control" name="bio" rows="3" id="Bio"></textarea>
  </div>
  <div>
    <input class="btn btn-default" type="submit" value="update contact">
  </div>
<% end %>

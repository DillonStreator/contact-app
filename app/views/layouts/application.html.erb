<!DOCTYPE html>
<html>
  <head>
    <title>ContactApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Kreon|Lobster+Two" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Rancho" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <ul class="nav nav-tabs">
          <li class="brand" role="presentation"><a href="/home">Contact'm</a></li>
          <li role="presentation"><a href="/contacts">My Contacts</a></li>
          <li role="presentation"><a href="/contacts/new">Create new contact</a></li>
        </ul>
      </div>
    </nav>
    <% flash.each do |name, message| %>
      <div class="alert alert-<%= name %> alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</span><span class="sr-only">Close</span></button>
        <%= message.html_safe %>  
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
